{
	"name": "Chrome Buzz",
	"version": "1.0.0",
	"description": "Get Google Buzz notifications, and buzz from Chrome!",
	"icons": {
	    "48": "icon_48.png",
	    "128": "icon_128.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"popup": "popup.html"
	},
	"permissions": [
		"https://www.googleapis.com/buzz/",
		"https://mail.google.com/",
		"tabs"
	]
}
